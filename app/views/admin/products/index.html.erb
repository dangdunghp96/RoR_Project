<% content_for :content do %>
<div style="padding-top: 10px">
  <button type="button" class="btn btn-primary" data-toggle="modal"  data-target="#new_category_Modal"><span class="glyphicon glyphicon-plus"></span>Add new category</button>
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#new_provider_Modal"><span class="glyphicon glyphicon-plus"></span>Add new provider</button>
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#new_product_Modal"><span class="glyphicon glyphicon-plus"></span>Add new product</button>
</div>
<table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
        <th>
          <%= link_to admin_product_path(product.id), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger btn-sm" do %>
            <span class="glyphicon glyphicon-trash"></span>
            delete
          <% end %>
        </th>
      </tr>
<% end %>
    </tbody>
  </table>
<div class="text-right">
  <ul class="flickr_pagination">
    <%= will_paginate @products %>
  </ul>
</div>
<%= render "admin/providers/new_provider"%>
<%= render "admin/categories/new_category"%>
<%= render "new_product", providers: @provider_list%>
<% end %>

