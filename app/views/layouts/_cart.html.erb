<div class="cart box_1">
  <a href="<%= carts_path %>">
    <h3>
      <div class="total">
        <i class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></i>
        <span><%= number_to_currency current_order.subtotal %></span> (<span><%= current_order.order_items.size %></span> items)
      </div>
    </h3>
  </a>
  <%= link_to "Empty cart", carts_path, data: { confirm: "Are you sure you wish to delete all products from your cart?" }, method: :delete, remote: true, class:"cart_empty"%>
</div>
