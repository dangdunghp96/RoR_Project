<% content_for :banner do %>
  <div class="page-head">
    <div class="container">
      <h3>History Transaction</h3>
    </div>
  </div>
<% end %>

<% content_for :content do %>
  <div class="men-wear">
    <div class="container">
      <% @pendings.each do |item| %>
        <p>Total: <%= number_to_currency item.subtotal %> on date: <%= item.updated_at %></p>
      <% end %>
      <% @completes.each do |item| %>
        <p>Total: <%= number_to_currency item.subtotal %> on date: <%= item.updated_at %></p>
      <% end %>
    </div>
    <div class="clearfix"></div>
  </div>
<% end %>
